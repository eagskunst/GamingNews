<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/cardview_news"
    android:layout_marginTop="@dimen/margin_cardview"
    android:layout_marginRight="@dimen/margin_cardview"
    android:layout_marginLeft="@dimen/margin_cardview"
    app:cardElevation="@dimen/elevation_cardview"
    app:cardCornerRadius="@dimen/elevation_cardview"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/iv_cardview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imageview_height_cardv"
            android:scaleType="centerCrop"
            android:contentDescription="@string/newssimage"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:background="#A6000000"
            android:paddingTop="5dp"
            android:paddingBottom="@dimen/common_padding_cv"
            >

            <TextView
                android:id="@+id/tv_channel_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/common_padding_cv"
                android:paddingEnd="@dimen/common_padding_cv"
                android:textSize="@dimen/secondary_text_cardv"
                android:textColor="@color/colorSecondaryText"/>

            <TextView
                android:id="@+id/tv_publish_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/common_padding_cv"
                android:paddingEnd="@dimen/common_padding_cv"
                android:textSize="@dimen/secondary_text_cardv"
                android:textColor="@color/colorSecondaryText"
                />


            <TextView
                android:id="@+id/tv_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/common_padding_cv"
                android:paddingEnd="@dimen/common_padding_cv"
                android:textColor="@color/colorPrimaryLight"
                android:textStyle="bold"
                android:textSize="@dimen/primary_text_cardv"
                />


            <TextView
                android:id="@+id/tv2_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/common_padding_cv"
                android:paddingEnd="@dimen/common_padding_cv"
                android:textColor="@color/colorTextAndIcons"
                android:textSize="@dimen/subtitle_text_cardv"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>